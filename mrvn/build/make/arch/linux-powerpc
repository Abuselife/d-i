# cd content for powerpc, includes yaboot for booting 
# apple powerpc (newworld) computers
arch-cdrom-pre_image:
	mkdir -p $(TREE_DIR)/install/powermac

	$(foreach NAME,$(KERNELNAME), \
		cp -f $(TEMP)/$(NAME) $(TREE_DIR)/install/powermac/linux; )

	cp -f $(DEST)/initrd-$(CDROM_INITRD).img $(TREE_DIR)/install/powermac/root.bin

	# New-world bootability
	cp -f boot/powerpc/ofboot.b $(TREE_DIR)/install/powermac
	cp -f /usr/lib/yaboot/yaboot $(TREE_DIR)/install/powermac
	cp -f boot/powerpc/boot.msg $(TREE_DIR)/install/powermac
	cp -f boot/powerpc/yaboot.conf $(TREE_DIR)/install/powermac/

arch-cdrom-post_image:

# creates a bootable cd image for powerpc
arch-cdrom-image:
	mkisofs -r -T --netatalk -hfs -probe -map boot/powerpc/hfs.map -part -no-desktop -hfs-bless $(TREE_DIR)/install/powermac -hfs-volid Debian-Installer/PPC -o $(TEMP_IMAGE) $(TREE_DIR)
